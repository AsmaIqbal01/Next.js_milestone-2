{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-unused-vars": "warn", // Change unused vars to warnings instead of errors
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Ignore unused vars that start with an underscore
    "react/react-in-jsx-scope": "off", // No need to import React in Next.js 12 and later
    "react/prop-types": "off" // Disable prop-types since you're using TypeScript
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the React version
    }
  }
}